<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profil3"
    android:padding="0dp">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_margin="0dp"
        android:background="@color/Primary"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_menu_24"/>

        <TextView
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Image Pahlawan"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_supervised_user_circle_24"/>

    </LinearLayout>

    <!-- Profile Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/carakter"
                android:layout_width="match_parent"
                android:layout_height="382dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/r_a_kartini" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R.A. Kartini"
                android:textSize="20sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/biography_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biografi pahlawan nasional R.A. Kartini"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="352dp"
                android:layout_height="358dp"
                android:text="Raden Ajeng Kartini (1879â€“1904) adalah pahlawan nasional Indonesia yang memperjuangkan hak-hak perempuan, khususnya dalam bidang pendidikan. Lahir di Jepara, ia menulis surat yang mengungkapkan pemikirannya tentang emansipasi wanita, yang kemudian diterbitkan sebagai Habis Gelap Terbitlah Terang. Kartini berjuang agar perempuan mendapatkan kesempatan yang setara dalam pendidikan, meskipun terbatas oleh tradisi. Hari kelahirannya, 21 April, diperingati sebagai Hari Kartini untuk mengenang perjuangannya."
                android:textColor="#555555"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/Primary">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:src="@drawable/ic_baseline_image_24" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_marginEnd="70dp">

        </ImageView>

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_person_24"/>
    </LinearLayout>
</LinearLayout>
